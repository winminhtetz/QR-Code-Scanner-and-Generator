<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".GenerateQRActivity">

    <ImageView
        android:id="@+id/imgQR"
        android:elevation="10dp"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edTxt"
        android:layout_width="0dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter here for encode"
        android:inputType="none"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/imgQR"
        app:layout_constraintStart_toStartOf="@+id/imgQR"
        app:layout_constraintTop_toBottomOf="@+id/imgQR" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click QR code to share"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imgQR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>